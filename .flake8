[flake8]

extend-exclude = venv,dist,build

extend-ignore =
    # at least two spaces before inline comment
    E261
    # block comment should start with '# '
    E265
    # do not assign a lambda expression, use a def
    E731
    ## line too long
    #E501

max-complexity = 10
max-line-length = 120

per-file-ignores =
    # imported but unused
    __init__.py: F401
